<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_one"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:background="@color/black"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_item_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="测试"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_one"
        app:layout_constraintRight_toRightOf="@id/iv_item_one"
        app:layout_constraintTop_toBottomOf="@id/iv_item_one"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>