<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/iv_item_one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/file"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_item_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66BB6A"
        app:layout_constraintBottom_toTopOf="@id/tv_item_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_one"

        tools:ignore="MissingConstraints" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_item_two"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#EF5350"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_one"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>